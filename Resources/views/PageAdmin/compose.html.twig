{% extends '@SonataPage/PageAdmin/compose.html.twig' %}

{% block content %}
    {{ parent() }}
    <script type="text/javascript">
        $(function() {
            $('.page-composer').on('click', '.page-composer__container__child__content button[type="submit"]',
                function(){
                    for(name in CKEDITOR.instances) {
                        CKEDITOR.instances[name].updateElement();
                    }
                }
            );
        });
    </script>
{% endblock %}
